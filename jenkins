pipeline {
    agent any
    parameters {
        choice(name: 'NUMBER',
        choices: [10,20,30] )
    }
    stages {
        stage('Make executable') {
            steps {
                sh('chmod +x ./scripts/fibonacci.sh')
            }
        }
        stage('Change directory') {
            
            steps {
                dir("${env.WORKSPACE}/scripts"){
                    sh("sh ./fibonacci.sh ${env.NUMBER}")
                }
            } 
        }
    }
}
